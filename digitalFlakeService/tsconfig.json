{
  "compilerOptions": {
    "target": "ES6",
    "module": "CommonJS",
    "rootDir": "./src",
    "outDir": "./dist",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "typeRoots": ["./node_modules/@types", "./types"] // Includes custom types
  },
  "include": ["src/**/*", "types/**/*"], // Ensure "types" is included
  "exclude": ["node_modules"]
}
